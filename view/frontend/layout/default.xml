<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block  class="Magento\Framework\View\Element\Html\Link\Current" name="customerFeedback">
                <arguments>
                    <argument name="label" xsi:type="string">Customer Feedback</argument>
                    <argument name="path" xsi:type="string">feedback/formpage/feedback</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="id" xsi:type="string">customer-feedback</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock> 
    </body>
</page>
